<%= simple_form_for(@tweeet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
      <%= f.input :tweeet, 
                  label: "Tweet about it", 
                  input_html: { class: "textarea" }, 
                  wrapper: false, 
                  label_html: { class: "label" }, 
                  placeholder: "Write a new tweet....",
                  autofocus: true,
                  required: false %>
  </div>
</div>
<%= f.button :submit, "Create Tweet", class: "button is-info" %>
<%= f.button :button, "Clear Tweet", type: "button", onclick: "clearText()", class: "button is-light" %>
<script>
  function clearText(){
    document.getElementById("tweeet_tweeet").value = "";
  }
</script>
<% end %>
