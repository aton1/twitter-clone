<section class="section">
  <div class="container">
    <div class="columns">
      <%= render 'profile' %>
      <div class="column is-half">
      <% if user_signed_in? && current_user.id == @tweeet.user.id %>
        <p id="notice"><%= notice %></p>
        <div class="box">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <strong><%= current_user.name %></strong><br />
                <small><%= current_user.username %></small>
                <p><%= @tweeet.tweeet %></p>
              </div>
              <nav class="level is-mobile">
                <div class="level-left">
                  <%= link_to edit_tweeet_path(@tweeet), class: "level-item" do %>
                    <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                  <% end %>
                  <%= link_to @tweeet, method: :delete, class: "level-item", data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                    <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                  <% end %>
                  <%= link_to tweeets_path, class: "level-item" do %>
                    <span class="icon"><i class="fa fa-undo" aria-hidden="true"></i></span>
                  <% end %>
                </div>
              </nav>
            </div>
          </article>
        </div>
      <% end %>
      </div>
      <%= render 'suggested-follows' %>
    </div>
  </div>
</section>
